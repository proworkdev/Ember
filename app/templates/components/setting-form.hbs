{{#each changeset.errors as |errorSet|}}
{{#each errorSet.validation as |error|}}
<div class="error">{{error}}</div>
{{/each}}
{{/each}}

{{#bs-form model=this changeset=(changeset model SettingValidations) rollback=(action "rollback") onSubmit=(action 'save' changeset) as |form|}}
{{form.element controlType="email" label="Notification Email" value="d" placeholder="Email" property="changeset.notificationEmail"}}
{{form.element controlType="text" label="Proxy URL" placeholder="Proxy Url" property="changeset.proxyUrl"}}
{{form.element controlType="number" label="Max error count" placeholder="Max Error Count" property="changeset.maxErrorCount"}}
{{form.element controlType="checkbox" label="Suspend Scrapping" property="changeset.suspendScraping"}}
{{form.element controlType="checkbox" label="Suspend Parsing" property="changeset.suspendParsing"}}
{{form.element controlType="checkbox" label="Suspend Updating" property="changeset.suspendUpdating"}}

{{bs-button defaultText="Submit" type="primary" buttonType="submit"}}
{{/bs-form}}



